{
    "name": "kb-library",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6",
        "express": "^4",
        "hdb": "^0.19.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.4",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-ui.library": "cds watch --open ui.library/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy kb-library --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "watch-ui.authors": "cds watch --open ui.authors/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-ui.books": "cds watch --open ui.books/webapp/index.html?sap-ui-xx-viewCache=false",
        "watch-ui.readers": "cds watch --open ui.readers/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana-cloud",
                "credentials": {
                    "database": "kb-library.db"
                }
            }
        }
    },
    "sapux": [
        "app/ui.library",
        "app/ui.authors",
        "app/ui.books",
        "app/ui.readers"
    ]
}